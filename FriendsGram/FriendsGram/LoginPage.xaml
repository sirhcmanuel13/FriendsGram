<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FriendsGram.LoginPage"
             NavigationPage.HasNavigationBar="false">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Start" Padding="10, 40, 10, 0">
            <Image Source="http://placehold.it/800x600" HeightRequest="120" WidthRequest="120" Margin="0, 0, 0, 40" />
            <Label x:Name="errorMessage" Text="Invalid Username and Password" TextColor="Red" HorizontalTextAlignment="Center" FontSize="16" />
            <Entry x:Name="usernameEntry" Placeholder="Username" />
            <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True"  Margin="0, 0, 0, 40" />
            <Button Text="Sign In" Clicked="Signin_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>